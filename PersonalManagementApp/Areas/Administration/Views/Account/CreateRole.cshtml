@model CreateRoleViewModel

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <form method="post" class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Create Role</h2>
                            <p class="text-white-50 mb-5">Please enter the role you want to create:</p>

                            <div class="form-outline form-white mb-4">
                                <label asp-for="@Model.RoleName"class="form-label">Role</label>
                                <input asp-for="@Model.RoleName" type="text" id="typeRoleNameX" class="form-control form-control-lg" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Create Role</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}