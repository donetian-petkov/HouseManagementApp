@model RegisterViewModel

<section class="vh-100 bg-image">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form method="post">

                <div class="form-outline mb-4">
                  <input asp-for="@Model.UserName" type="text"  id="form3Example1cg" class="form-control form-control-lg" />
                  <label asp-for="@Model.UserName" class="form-label" >Your Name</label>
                  <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="@Model.Email" type="email" id="form3Example3cg" class="form-control form-control-lg" />
                  <label asp-for="@Model.Email" class="form-label" for="form3Example3cg">Your Email</label>
                  <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="form-outline mb-4">
                  <input asp-for="@Model.Password" type="password" id="form3Example4cg" class="form-control form-control-lg" />
                  <label asp-for="@Model.Password" for="form3Example4cg">Password</label>
                  <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <div class="form-outline mb-4">
                  <input asp-for="@Model.ConfirmPassword" type="password" id="form3Example4cdg" class="form-control form-control-lg" />
                  <label asp-for="@Model.ConfirmPassword" class="form-label" for="form3Example4cdg">Repeat your password</label>
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="button"
                          class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a asp-controller="User" asp-action="Login"
                                                                                        class="fw-bold text-body"><u>Login here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
}