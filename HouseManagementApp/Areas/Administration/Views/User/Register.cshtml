@model RegisterViewModel

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <form method="post" class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                            <p class="text-white-50 mb-5">Create an account</p>

                            <div class="form-outline form-white mb-4">
                                <label asp-for="@Model.UserName" class="form-label">Username</label>
                                <input asp-for="@Model.UserName" type="text" id="typeEmailX" class="form-control form-control-lg" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label asp-for="@Model.Email" class="form-label">Email</label>
                                <input asp-for="@Model.Email" type="email" id="typeEmailX" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label asp-for="@Model.Password" class="form-label">Password</label>
                                <input asp-for="@Model.Password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label asp-for="@Model.ConfirmPassword" class="form-label"> Confirm Password</label>
                                <input asp-for="@Model.ConfirmPassword" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>

                        </form>

                        <p class="text-center text-muted mt-5 mb-0">
                            Have already an account?
                            <a asp-controller="User" asp-action="Login"
                               class="fw-bold text-body">
                                <u>Login here</u>
                            </a>
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}